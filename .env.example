# ==========================================
# KRAY WALLET - Environment Configuration
# ==========================================
# Copy this file to .env and configure your values

# Bitcoin Core RPC
BITCOIN_RPC_HOST=127.0.0.1
BITCOIN_RPC_PORT=8332
BITCOIN_RPC_USER=your_rpc_user
BITCOIN_RPC_PASSWORD=your_rpc_password

# ORD Server
ORD_SERVER_URL=http://127.0.0.1:80

# Server Configuration
PORT=3000
NODE_ENV=development

# Network (mainnet, testnet, signet)
NETWORK=mainnet

# Lightning Network (LND) - Optional
LND_HOST=127.0.0.1:10009
LND_CERT_PATH=./lnd-data/tls.cert
LND_MACAROON_PATH=./lnd-data/data/chain/bitcoin/mainnet/admin.macaroon

# Marketplace
MARKET_FEE_ADDRESS=bc1pe3nvklfghzyepcjme5tyrv28kkmruypq0tmykgcdatkkreufyrhqaxf9p2
MARKET_FEE_PERCENTAGE=2.0

# Security
SESSION_SECRET=change-this-secret-in-production

# ==========================================
# DeFi & LND Pool Integration
# ==========================================

# Use LND for pool key management (true = LND, false = HD Wallet)
USE_LND_FOR_POOLS=false

# LND Configuration for Pools
LND_DIR=./lnd-data
LND_HOST=localhost:10009
LND_TLS_CERT_PATH=./lnd-data/tls.cert
LND_MACAROON_PATH=./lnd-data/data/chain/bitcoin/mainnet/admin.macaroon

# Pool Master Seed (HD Wallet fallback)
# IMPORTANTE: Guardar em HSM/KMS em produção!
POOL_MASTER_SEED=your-secure-seed-here

# Treasury Address (recebe protocol fees)
TREASURE_ADDRESS=bc1pe3nvklfghzyepcjme5tyrv28kkmruypq0tmykgcdatkkreufyrhqaxf9p2


{
  "manifest_version": 3,
  "name": "KrayWallet - Bitcoin Ordinals & Runes",
  "version": "1.0.0",
  "description": "Bitcoin wallet com suporte a SIGHASH customizado, Taproot, Ordinals e Runes",
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "https://kraywallet-backend.vercel.app/*",
    "https://kraywallet-backend.onrender.com/*",
    "https://mempool.space/*",
    "https://ordinals.com/*",
    "https://api.hiro.so/*",
    "https://open-api.unisat.io/*",
    "https://*/*",
    "http://localhost:5002/*",
    "http://127.0.0.1:5002/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon-16.png",
      "32": "assets/icon-32.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    }
  },
  "background": {
    "service_worker": "background/background-real.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["content/injected.js", "images/bitcoin.png"],
      "matches": ["<all_urls>"]
    }
  ]
}


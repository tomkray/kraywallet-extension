# KRAY SPACE L2 - Environment Variables Example
# Copy this file to .env and fill in your values

PORT=5000
NODE_ENV=development
BITCOIN_NETWORK=testnet
DB_PATH=./data/kray-l2.db

# Bridge multisig address (generated from validator pubkeys)
BRIDGE_MULTISIG_ADDRESS=

# Validator mnemonics (24 words each)
VALIDATOR_1_MNEMONIC=
VALIDATOR_2_MNEMONIC=
VALIDATOR_3_MNEMONIC=

# QuickNode
QUICKNODE_ENDPOINT=https://your-endpoint.quiknode.pro/your-key
QUICKNODE_ENABLED=true

# Security
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
WITHDRAWAL_CHALLENGE_PERIOD=86400

# Optional: Supabase
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_KEY=





